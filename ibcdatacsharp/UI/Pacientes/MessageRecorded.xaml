<Window x:Class="ibcdatacsharp.UI.Pacientes.MessageRecorded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ibcdatacsharp.UI.Pacientes"
        mc:Ignorable="d"
        Title="MessageRecorded" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Margin="5">Paciente: </TextBlock>
            <TextBlock Margin="5" Text="{Binding Nombre}"/>
            <TextBlock Margin="5">Id: </TextBlock>
            <TextBlock Margin="5" Text="{Binding Id}"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Files}" VerticalAlignment="Top" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="2" Height="auto" Click="Button_Click" Width="40">OK</Button>
    </Grid>
</Window>
